@model QUANLYDIEMRENLUYEN.Areas.Admin.Models.Semester

@{
    ViewData["Title"] = "Thêm học kỳ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="main">
    <div class="pagetitle mb-3">
        <h4 class="fw-bold">Thêm học kỳ</h4>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="SemesterName" class="form-label">Tên học kỳ</label>
                    <input asp-for="SemesterName" class="form-control" />
                    <span asp-validation-for="SemesterName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Năm học</label>
                    <select asp-for="AcademicYearId" class="form-select" asp-items="ViewBag.AcademicYears">
                        <option value="">-- Chọn năm học --</option>
                    </select>
                    <span asp-validation-for="AcademicYearId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="mdi mdi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="mdi mdi-content-save"></i> Lưu học kỳ
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>
