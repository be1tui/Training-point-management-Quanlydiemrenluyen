@model QUANLYDIEMRENLUYEN.Models.Account

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="main">
    <div class="pagetitle mb-3">
        <h4 class="fw-bold"><i class="mdi mdi-account-edit-outline"></i> @ViewData["Title"]</h4>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post" class="row g-3">
                <input type="hidden" asp-for="AccountId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-6">
                    <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Role" class="form-label">Vai trò</label>
                    <select asp-for="Role" class="form-select">
                        <option value="">-- Chọn vai trò --</option>
                        <option value="Admin" selected="@Model.Role == "Admin"">Admin</option>
                        <option value="Lecturer" selected="@Model.Role == "Lecturer"">Chủ Nhiệm Khoa</option>
                        <option value="Classmonitor" selected="@Model.Role == "Classmonitor"">Lớp Trưởng</option>
                        <option value="Student" selected="@Model.Role == "Student"">Sinh Viên</option> 
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ClassId" class="form-label">Lớp</label>
                    <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId">
                        <option value="">-- Chọn lớp --</option>
                    </select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive">Kích hoạt tài khoản</label>
                    </div>
                </div>

                <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="mdi mdi-content-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="mdi mdi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
