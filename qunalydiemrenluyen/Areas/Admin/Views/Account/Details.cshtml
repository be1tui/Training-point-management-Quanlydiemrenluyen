@model QUANLYDIEMRENLUYEN.Models.Account

@{
    ViewData["Title"] = "Chi tiết tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="main">
    <div class="pagetitle mb-3">
        <h4 class="fw-bold">
            <i class="mdi mdi-account-details-outline"></i> @ViewData["Title"]
        </h4>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-4 text-primary">
                <i class="mdi mdi-account-box-outline"></i> Thông tin tài khoản
            </h5>

            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Mã tài khoản:</div>
                <div class="col-md-8">@Model.AccountId</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Tên đăng nhập:</div>
                <div class="col-md-8">@Model.Username</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Email:</div>
                <div class="col-md-8">@Model.Email</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Họ và tên:</div>
                <div class="col-md-8">@Model.FullName</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Vai trò:</div>
                <div class="col-md-8">@Model.Role</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Trạng thái:</div>
                <div class="col-md-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Kích hoạt</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Không kích hoạt</span>
                    }
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Lớp:</div>
                <div class="col-md-8">@Model.Class?.ClassName ?? "<i>(Không có)</i>"</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-4 fw-bold">Ngày tạo:</div>
                <div class="col-md-8">@Model.CreatedAt.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-area="Admin" asp-controller="Account" asp-action="Edit" asp-route-id="@Model.AccountId" class="btn btn-warning">
                    <i class="mdi mdi-pencil"></i> Chỉnh sửa
                </a>
                <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-secondary">
                    <i class="mdi mdi-arrow-left-bold-circle"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</main>
