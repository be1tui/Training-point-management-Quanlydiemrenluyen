@model IEnumerable<QUANLYDIEMRENLUYEN.Models.Account>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4><i class="card-title mb-0"></i> @ViewData["Title"]</h4>
                <a href="/Admin/Account/Create" class="btn btn-primary">
                    <i class="mdi mdi-plus-circle-outline me-1"></i> Thêm mới
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Username)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.Role)</th>
                                <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                <th>Lớp</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td>
                                        <span class="badge bg-info">@item.Role</span>
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Bị khóa</span>
                                        }
                                    </td>
                                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Class?.ClassName</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/Admin/Account/Edit/@item.AccountId" class="btn btn-warning btn-sm" title="Sửa">
                                                <i class="mdi mdi-pencil"></i>
                                            </a>
                                            <a href="/Admin/Account/Details/@item.AccountId" class="btn btn-info btn-sm" title="Chi tiết">
                                                <i class="mdi mdi-eye"></i>
                                            </a>
                                            <a href="/Admin/Account/Delete/@item.AccountId" class="btn btn-danger btn-sm" title="Xóa"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản này?');">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div> <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>
