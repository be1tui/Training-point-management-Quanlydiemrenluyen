@model QUANLYDIEMRENLUYEN.Areas.Admin.Models.Criteria

<h3>Sửa tiêu chí con</h3>
<form asp-action="EditCriteria" method="post">
    <input type="hidden" asp-for="CriteriaId" />
    <input type="hidden" asp-for="CategoryId" />
    <div class="form-group">
        <label>Tên tiêu chí</label>
        <input asp-for="CriteriaName" class="form-control" />
        <span asp-validation-for="CriteriaName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Điểm tối đa</label>
        <input asp-for="MaxScore" class="form-control" />
        <span asp-validation-for="MaxScore" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Yêu cầu minh chứng?</label>
        <input asp-for="RequiresEvidence" type="checkbox" />
    </div>
    <div class="form-group">
        <label>Phương pháp đánh giá</label>
        <input asp-for="EvaluationMethod" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>