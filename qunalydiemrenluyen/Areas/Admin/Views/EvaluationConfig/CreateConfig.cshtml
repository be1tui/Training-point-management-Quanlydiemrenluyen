@model QUANLYDIEMRENLUYEN.Areas.Admin.Models.EvaluationConfig

@{
    ViewData["Title"] = "Tạo cấu hình thời gian đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">@ViewData["Title"]</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách cấu hình</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Thông tin cấu hình</h4>
                <form asp-action="CreateConfig">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-3">
                        <label asp-for="SemesterId" class="col-sm-3 col-form-label">Học kỳ</label>
                        <div class="col-sm-9">
                            <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId">
                                <option value="">-- Chọn học kỳ --</option>
                            </select>
                            <span asp-validation-for="SemesterId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="SelfEvalStart" class="col-sm-3 col-form-label">Bắt đầu SV tự đánh giá</label>
                        <div class="col-sm-9">
                            <input asp-for="SelfEvalStart" type="datetime-local" class="form-control" />
                            <span asp-validation-for="SelfEvalStart" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="SelfEvalEnd" class="col-sm-3 col-form-label">Kết thúc SV tự đánh giá</label>
                        <div class="col-sm-9">
                            <input asp-for="SelfEvalEnd" type="datetime-local" class="form-control" />
                            <span asp-validation-for="SelfEvalEnd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="LecturerEvalStart" class="col-sm-3 col-form-label">Bắt đầu GV đánh giá</label>
                        <div class="col-sm-9">
                            <input asp-for="LecturerEvalStart" type="datetime-local" class="form-control" />
                            <span asp-validation-for="LecturerEvalStart" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="LecturerEvalEnd" class="col-sm-3 col-form-label">Kết thúc GV đánh giá</label>
                        <div class="col-sm-9">
                            <input asp-for="LecturerEvalEnd" type="datetime-local" class="form-control" />
                            <span asp-validation-for="LecturerEvalEnd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <div>
                                <button type="submit" class="btn btn-primary w-md waves-effect waves-light">Lưu</button>
                                <a asp-action="Index" class="btn btn-secondary w-md waves-effect waves-light">Hủy</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}