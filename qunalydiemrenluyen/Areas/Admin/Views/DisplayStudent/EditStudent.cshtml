@model QUANLYDIEMRENLUYEN.Models.Account
@{
    ViewBag.Title = "Sửa sinh viên";
    var classes = ViewBag.Classes as List<QUANLYDIEMRENLUYEN.Models.Class>;
    var faculties = ViewBag.Faculties as List<QUANLYDIEMRENLUYEN.Models.Faculty>;
}

<h2>Sửa sinh viên</h2>

<form asp-action="EditStudent" method="post">
    <input type="hidden" asp-for="AccountId" />
    <div class="form-group">
        <label>Mã SV (Username)</label>
        <input asp-for="Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="FullName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>
    <div class="form-group">
        <label>Lớp</label>
        <select asp-for="ClassId" class="form-control" required>
            <option value="">--Chọn lớp--</option>
            @foreach (var c in classes)
            {
                <option value="@c.ClassId">@c.ClassName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Khoa</label>
        <select asp-for="FacultyId" class="form-control" required>
            <option value="">--Chọn khoa--</option>
            @foreach (var f in faculties)
            {
                <option value="@f.FacultyId">@f.FacultyName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Mật khẩu mới (bỏ trống nếu không đổi)</label>
        <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
    </div>
    <div class="form-group">
        <label>Quyền tài khoản</label>
        <select asp-for="Role" class="form-control" required>
            <option value="Student">Sinh viên</option>
            <option value="Classmonitor">Lớp trưởng</option>
        </select>
    </div>
    <div class="form-group">
        <label>Trạng thái</label>
        <select asp-for="IsActive" class="form-control">
            <option value="true">Kích hoạt</option>
            <option value="false">Khóa</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>