@model QUANLYDIEMRENLUYEN.Models.Class

@{
    ViewData["Title"] = "Chi tiết lớp học";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="main">
    <div class="pagetitle mb-3">
        <h4><i class="mdi mdi-information-outline"></i> @ViewData["Title"]</h4>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h5 class="mb-4 text-primary">Thông tin lớp học</h5>

            <dl class="row">
                <dt class="col-sm-3">Tên lớp học</dt>
                <dd class="col-sm-9">@Model.ClassName</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
            </dl>

            <div class="mt-4">
                <a asp-area="Admin" asp-controller="Class" asp-action="Edit" asp-route-id="@Model?.ClassId" class="btn btn-warning me-2">
                    <i class="mdi mdi-pencil"></i> Chỉnh sửa
                </a>
                <a asp-area="Admin" asp-controller="Class" asp-action="Index" class="btn btn-secondary">
                    <i class="mdi mdi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</main>
