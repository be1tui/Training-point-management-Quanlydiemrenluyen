@model IEnumerable<QUANLYDIEMRENLUYEN.Models.Class>

@{
    ViewData["Title"] = "Quản lý lớp học";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="main">
    <div class="pagetitle mb-3 d-flex justify-content-between align-items-center">
        <h4><i class="mdi mdi-google-classroom"></i> @ViewData["Title"]</h4>
        <a asp-action="Create" class="btn btn-primary">
            <i class="mdi mdi-plus-circle-outline"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().ClassName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ClassName</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ClassId" class="btn btn-warning btn-sm me-1">
                                    <i class="mdi mdi-pencil"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ClassId" class="btn btn-info btn-sm me-1">
                                    <i class="mdi mdi-eye-outline"></i> Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ClassId" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa lớp học này?');">
                                    <i class="mdi mdi-delete-outline"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>
